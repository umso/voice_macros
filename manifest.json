{
	"manifest_version": 2,

	"name": "Voice Macro Recording",
	"description": "Record custom voice commands",
	"version": "0.0.1",

	"background": {
      "scripts": ["background.js"]
    },

	"browser_action": {
		"default_icon": "icons/icon_idle.png",
		"default_popup": "popup/popup.html",
		"default_title": "Voice Commander"
	},

	"permissions": [
		"activeTab",
		"tabs",
		"tts",
		"management"
	],

	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*", "file://*/*"],
		"js": ["eventCodes.js", "recorder.js"]
	}],

	"icons": {
		"128": "icons/icon128.png"
	}
}
